<local:CustomPopUp
	x:Class="BlueStacks.BlueStacksUI.MOBASkillSettingsPopup"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:BlueStacks.BlueStacksUI"
	xmlns:Common="clr-namespace:BlueStacks.Common;assembly=HD-Common"
	x:Name="mMOBASkillSettingsPopup"
	Opened="MOBASkillSettingsPopup_Opened"
	Closed="MOBASkillSettingsPopup_Closed"
	Grid.Column="3"
	PopupAnimation="Fade"
	HorizontalOffset="-64"
	IsOpen="False"
	AllowsTransparency="True"
	HorizontalAlignment="Left"
	Placement="Top"
	Visibility="Collapsed">
	<FrameworkElement.Style>
		<Style
			TargetType="{x:Type Popup}">
			<Setter
				Property="Popup.StaysOpen"
				Value="False" />
			<Style.Triggers>
				<DataTrigger
					Value="True"
					Binding="{Binding IsMouseOver, ElementName=mBorder}">
					<Setter
						Property="Popup.StaysOpen"
						Value="True" />
				</DataTrigger>
			</Style.Triggers>
		</Style>
	</FrameworkElement.Style>
	<StackPanel>
		<Border
			x:Name="mBorder"
			Style="{StaticResource ShadowBorderForPopup}">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition
						Height="Auto" />
					<RowDefinition
						Height="10" />
				</Grid.RowDefinitions>
				<Border
					Style="{StaticResource OuterBorder}">
					<Grid>
						<UIElement.OpacityMask>
							<VisualBrush
								Stretch="None"
								Visual="{Binding ElementName=mMaskBorder3}" />
						</UIElement.OpacityMask>
						<Border
							x:Name="mMaskBorder3"
							Style="{StaticResource MaskBorder}" />
						<Grid>
							<Grid
								Margin="8"
								MaxWidth="144">
								<Grid.RowDefinitions>
									<RowDefinition
										Height="Auto" />
									<RowDefinition
										Height="Auto" />
									<RowDefinition
										Height="Auto" />
									<RowDefinition
										Height="Auto" />
									<RowDefinition
										Height="Auto" />
									<RowDefinition
										Height="Auto" />
									<RowDefinition
										Height="Auto" />
								</Grid.RowDefinitions>
								<Grid
									x:Name="mHeaderGrid"
									Row="0"
									Margin="2,0,0,0">
									<Grid.ColumnDefinitions>
										<ColumnDefinition
											Width="Auto" />
										<ColumnDefinition
											Width="3*" />
										<ColumnDefinition
											Width="Auto" />
									</Grid.ColumnDefinitions>
									<TextBlock
										FontSize="12"
										Grid.Column="0"
										Text="{Binding Path=LocaleModel.[STRING_SKILL_SETTINGS], FallbackValue='Skill settings'}"
										Foreground="{Binding Path=ColorModel.[ContextMenuItemForegroundColor]}" />
									<Common:CustomPictureBox
										x:Name="mHelpIcon"
										ImageName="menu_help"
										Grid.Column="2"
										Height="16"
										Width="16"
										HorizontalAlignment="Right"
										VerticalAlignment="Top"
										Cursor="Hand"
										MouseEnter="HelpIcon_MouseEnter" />
								</Grid>
								<Common:CustomRadioButton
									x:Name="mQuickSkill"
									Grid.Row="1"
									GroupName="MobaSkills"
									FontSize="12"
									Height="14"
									Margin="0,8,0,0"
									IsChecked="True"
									Content="{Binding Path=LocaleModel.[STRING_QUICK_CAST]}"
									PreviewMouseLeftButtonDown="MobaSkillsRadioButton_PreviewMouseLeftButtonDown" />
								<Common:CustomRadioButton
									x:Name="mAutoSkill"
									Grid.Row="2"
									FontSize="12"
									Height="14"
									GroupName="MobaSkills"
									Margin="0,5,0,0"
									Content="{Binding Path=LocaleModel.[STRING_AUTOCAST]}"
									PreviewMouseLeftButtonDown="MobaSkillsRadioButton_PreviewMouseLeftButtonDown" />
								<Common:CustomRadioButton
									x:Name="mManualSkill"
									Grid.Row="3"
									FontSize="12"
									Height="14"
									GroupName="MobaSkills"
									Margin="0,5,0,5"
									Content="{Binding Path=LocaleModel.[STRING_MANUAL_MODE]}"
									PreviewMouseLeftButtonDown="MobaSkillsRadioButton_PreviewMouseLeftButtonDown" />
								<Grid
									Row="4"
									Height="1"
									Background="{Binding Path=ColorModel.[HorizontalSeparatorColor]}" />
								<Grid
									x:Name="mOtherSettingsGrid"
									Row="5"
									Margin="2,5,0,8">
									<Grid.ColumnDefinitions>
										<ColumnDefinition
											Width="Auto" />
										<ColumnDefinition
											Width="4*" />
										<ColumnDefinition
											Width="Auto" />
									</Grid.ColumnDefinitions>
									<TextBlock
										FontSize="12"
										Grid.Column="0"
										Text="{Binding Path=LocaleModel.[STRING_OTHER_SETTINGS], FallbackValue='Other setting'}"
										Foreground="{Binding Path=ColorModel.[ContextMenuItemForegroundColor]}" />
									<Common:CustomPictureBox
										x:Name="mOtherSettingsHelpIcon"
										ImageName="menu_help"
										Grid.Column="2"
										Height="16"
										Width="16"
										HorizontalAlignment="Right"
										VerticalAlignment="Top"
										Cursor="Hand"
										MouseEnter="OtherSettingsHelpIcon_MouseEnter" />
								</Grid>
								<Grid
									Row="6">
									<Common:CustomCheckbox
										x:Name="mStopMovementCheckbox"
										ImageMargin="0,0,-3,0"
										Margin="-2,0,0,0"
										Height="16"
										TextFontSize="12"
										Content="{Binding Path=LocaleModel.[STRING_STOP_MOVEMENT]}"
										Checked="StopMovementCheckbox_Checked"
										Unchecked="StopMovementCheckbox_Unchecked" />
								</Grid>
							</Grid>
						</Grid>
					</Grid>
				</Border>
				<Grid
					Row="1"
					Column="5">
					<Path
						x:Name="DownArrow"
						Margin="0,-2,0,0"
						Data="M0,0 L8,10 L16,0"
						HorizontalAlignment="Center"
						VerticalAlignment="Bottom"
						Stroke="{Binding ColorModel.[PopupBorderBrush]}"
						Fill="{Binding ColorModel.[ContextMenuItemBackgroundColor]}" />
				</Grid>
			</Grid>
		</Border>
	</StackPanel>
</local:CustomPopUp>
