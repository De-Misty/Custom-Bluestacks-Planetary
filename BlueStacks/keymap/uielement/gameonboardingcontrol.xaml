<controls:UserControl
	x:Class="BlueStacks.BlueStacksUI.GameOnboardingControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:BlueStacks.BlueStacksUI"
	xmlns:Common="clr-namespace:BlueStacks.Common;assembly=HD-Common"
	Width="720"
	Height="516"
	xmlns:controls="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
	DataContext="{Binding Source='{x:Static Common:BlueStacksUIBinding.Instance}'}"
	Loaded="Control_Loaded"
	KeyDown="Control_KeyDown">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="40" />
			<RowDefinition
				Height="*" />
		</Grid.RowDefinitions>
		<Border
			Grid.Row="1"
			Background="{Binding Path=ColorModel.[ApplicationBackgroundBrush]}">
			<Grid
				x:Name="mBrowserGrid"
				Opacity="1" />
		</Border>
		<Grid
			Row="0">
			<Common:CustomButton
				x:Name="mSkipOnboardingButton"
				ButtonColor="Overlay"
				Height="32"
				FontSize="12"
				MinWidth="80"
				Visibility="Collapsed"
				HorizontalAlignment="Right"
				VerticalAlignment="Center"
				Content="{Binding Path=LocaleModel.[STRING_SKIP], FallbackValue=Skip}"
				Click="SkipOnboardingButton_Click" />
			<Grid
				x:Name="mBrowserGridTemp"
				Height="1"
				Width="1" />
		</Grid>
	</Grid>
</controls:UserControl>
