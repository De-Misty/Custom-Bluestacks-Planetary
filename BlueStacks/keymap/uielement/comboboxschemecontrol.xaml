<controls:UserControl
	x:Class="BlueStacks.BlueStacksUI.ComboBoxSchemeControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:BlueStacks.BlueStacksUI"
	xmlns:Common="clr-namespace:BlueStacks.Common;assembly=HD-Common"
	Width="295"
	IsEnabled="True"
	HorizontalAlignment="Stretch"
	xmlns:controls="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
	DataContext="{Binding Source='{x:Static Common:BlueStacksUIBinding.Instance}'}"
	MouseDown="ComboBoxItem_MouseDown"
	MouseEnter="ComboBoxItem_MouseEnter"
	MouseLeave="ComboBoxItem_MouseLeave"
	LostFocus="ComboBoxItem_LostFocus">
	<Grid
		Name="mSchemeControl"
		Width="256"
		Height="36"
		VerticalAlignment="Center"
		Margin="6,0,21,0">
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="0" />
			<ColumnDefinition
				Width="Auto" />
			<ColumnDefinition
				Width="6" />
			<ColumnDefinition
				Width="*" />
			<ColumnDefinition
				Width="Auto" />
			<ColumnDefinition
				Width="Auto" />
			<ColumnDefinition
				Width="Auto" />
		</Grid.ColumnDefinitions>
		<Common:CustomPictureBox
			Name="mBookmarkImg"
			Grid.Column="1"
			ImageName="bookmark"
			Height="16"
			Width="16"
			ToolTip="{Binding Path=LocaleModel.[STRING_BOOKMARK], FallbackValue=Bookmark}"
			MouseDown="Bookmark_img_MouseDown" />
		<Common:CustomTextBox
			Name="mSchemeName"
			Grid.Column="3"
			HorizontalContentAlignment="Left"
			Width="Auto"
			IsReadOnly="True"
			Height="24"
			Focusable="False"
			KeyUp="MSchemeName_KeyUp" />
		<Common:CustomPictureBox
			Name="mEditImg"
			Grid.Column="4"
			ImageName="edit_icon"
			Height="14"
			Width="14"
			HorizontalAlignment="Right"
			Margin="10,0"
			ToolTip="{Binding Path=LocaleModel.[STRING_EDIT_KEYS], FallbackValue=Edit}"
			MouseDown="EditImg_MouseDown" />
		<Common:CustomPictureBox
			Name="mSaveImg"
			Grid.Column="4"
			ImageName="save"
			Visibility="Collapsed"
			Height="14"
			Width="14"
			HorizontalAlignment="Right"
			Margin="10,0"
			ToolTip="{Binding Path=LocaleModel.[STRING_SAVE_KEYS], FallbackValue=Save}"
			MouseDown="SaveImg_MouseDown" />
		<Common:CustomPictureBox
			Name="mCopyImg"
			Grid.Column="5"
			ImageName="duplicate"
			Height="14"
			Width="14"
			HorizontalAlignment="Right"
			Margin="10,0"
			ToolTip="{Binding Path=LocaleModel.[STRING_COPY_KEYS], FallbackValue=Copy}"
			MouseDown="CopyImg_MouseDown" />
		<Common:CustomPictureBox
			Name="mDeleteImg"
			Grid.Column="6"
			ImageName="delete"
			Height="14"
			Width="14"
			HorizontalAlignment="Right"
			Margin="10,0"
			ToolTip="{Binding Path=LocaleModel.[STRING_DELETE], FallbackValue=Delete}"
			MouseDown="DeleteImg_MouseDown" />
	</Grid>
</controls:UserControl>
