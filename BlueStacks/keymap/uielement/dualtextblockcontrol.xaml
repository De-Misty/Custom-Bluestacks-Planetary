<controls:UserControl
	x:Class="BlueStacks.BlueStacksUI.DualTextBlockControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:BlueStacks.BlueStacksUI"
	xmlns:Common="clr-namespace:BlueStacks.Common;assembly=HD-Common"
	xmlns:controls="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
	DataContext="{Binding Source='{x:Static Common:BlueStacksUIBinding.Instance}'}"
	Background="{Binding Path=ColorModel.[DualTextblockControlOuterBackground]}">
	<Grid
		Margin=".5">
		<FrameworkElement.Resources>
			<ResourceDictionary>
				<Style
					x:Key="{x:Type TextBox}"
					TargetType="{x:Type TextBox}">
					<Setter
						Property="Foreground"
						Value="{Binding Path=ColorModel.[GuidanceTextColorForeground]}" />
					<Setter
						Property="FontSize"
						Value="12" />
					<Setter
						Property="HorizontalAlignment"
						Value="Stretch" />
					<Setter
						Property="VerticalAlignment"
						Value="Stretch" />
					<Setter
						Property="VerticalContentAlignment"
						Value="Center" />
					<Setter
						Property="Background"
						Value="{Binding Path=ColorModel.[DualTextblockControlBackground]}" />
					<Setter
						Property="Padding"
						Value="8,7,9,7" />
				</Style>
			</ResourceDictionary>
		</FrameworkElement.Resources>
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="Auto" />
			<ColumnDefinition
				x:Name="mValueColumn"
				Width="Auto" />
			<ColumnDefinition
				Width="Auto" />
		</Grid.ColumnDefinitions>
		<TextBox
			x:Name="mKeyPropertyName"
			IsEnabled="False"
			Grid.Column="0"
			MinWidth="130"
			MaxWidth="130"
			MaxLength="30"
			Margin=".5"
			BorderThickness="0"
			TextChanged="KeyPropertyNameTextBox_TextChanged"
			IsVisibleChanged="KeyPropertyNameTextBox_IsVisibleChanged">
			<FrameworkElement.ContextMenu>
				<ContextMenu
					Visibility="Collapsed" />
			</FrameworkElement.ContextMenu>
		</TextBox>
		<TextBox
			x:Name="mKeyTextBox"
			Grid.Column="1"
			HorizontalContentAlignment="Center"
			Margin=".5"
			BorderThickness="0"
			MinWidth="60"
			MaxWidth="80"
			PreviewMouseDown="KeyTextBox_MouseDown"
			PreviewMouseLeftButtonDown="mKeyTextBox_PreviewMouseLeftButtonDown"
			TextChanged="KeyTextBox_TextChanged"
			PreviewKeyDown="KeyTextBox_KeyDown"
			KeyUp="KeyTextBox_KeyUp"
			LostFocus="KeyTextBox_LostFocus"
			PreviewMouseWheel="KeyTextBoxPreviewMouseWheel">
			<FrameworkElement.ContextMenu>
				<ContextMenu
					Visibility="Collapsed" />
			</FrameworkElement.ContextMenu>
		</TextBox>
		<TextBox
			x:Name="mKeyPropertyNameTextBox"
			Grid.Column="2"
			IsEnabled="False"
			MinWidth="132"
			MaxWidth="132"
			MaxLength="30"
			Margin=".5"
			BorderThickness="0"
			GotFocus="KeyPropertyNameTextBox_GotFocus"
			LostFocus="KeyPropertyNameTextBox_LostFocus"
			TextChanged="KeyPropertyNameTextBox_TextChanged"
			IsVisibleChanged="KeyPropertyNameTextBox_IsVisibleChanged">
			<FrameworkElement.ContextMenu>
				<ContextMenu
					Visibility="Collapsed" />
			</FrameworkElement.ContextMenu>
		</TextBox>
	</Grid>
</controls:UserControl>
