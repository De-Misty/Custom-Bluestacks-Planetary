<Common:CustomWindow
	x:Class="BlueStacks.BlueStacksUI.CFGReorderWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:Common="clr-namespace:BlueStacks.Common;assembly=HD-Common"
	xmlns:local="clr-namespace:BlueStacks.BlueStacksUI"
	xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
	Width="1400"
	Background="#232B2B"
	Height="650">
	<Grid
		Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="Auto" />
			<ColumnDefinition
				Width="Auto" />
			<ColumnDefinition
				Width="Auto" />
			<ColumnDefinition
				Width="Auto" />
		</Grid.ColumnDefinitions>
		<Grid
			Column="0">
			<ListView
				x:Name="mLoadedCFGsListView"
				Background="#FF696969"
				MaxWidth="250"
				Visibility="Collapsed"
				VerticalAlignment="Top"
				SelectionChanged="LoadedCFGsListView_SelectionChanged" />
			<StackPanel
				Orientation="Vertical"
				VerticalAlignment="Bottom">
				<StackPanel
					HorizontalAlignment="Center"
					VerticalAlignment="Bottom"
					Orientation="Horizontal">
					<Button
						FontSize="16"
						Margin="15"
						Padding="10,5"
						Background="#9147ff"
						Foreground="#FFFFFFFF"
						Content="Open CFGs"
						PreviewMouseLeftButtonUp="LoadCFGButton_PreviewMouseLeftButtonUp" />
					<Button
						FontSize="16"
						Margin="15"
						Padding="10,5"
						Background="#9147ff"
						Foreground="#FFFFFFFF"
						Content="Save all"
						PreviewMouseLeftButtonUp="SaveCFGButton_PreviewMouseLeftButtonUp" />
				</StackPanel>
				<StackPanel
					x:Name="mCurrentlyLoadedStackPanel"
					Orientation="Vertical"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					Visibility="Collapsed">
					<TextBlock
						Text="Currently loaded CFG"
						HorizontalAlignment="Center"
						Foreground="#FFFFFFFF"
						FontSize="18" />
					<TextBlock
						x:Name="mCurrentlyLoadedCFGTextBlock"
						Text="None"
						Foreground="#FFFFFFFF"
						HorizontalAlignment="Center"
						FontSize="18" />
				</StackPanel>
			</StackPanel>
		</Grid>
		<Grid
			Column="1"
			Margin="50,0,0,0">
			<ListView
				x:Name="mSchemesListView"
				Visibility="Collapsed"
				SelectionChanged="mSchemesListView_SelectionChanged" />
		</Grid>
		<Grid
			Column="2"
			Margin="20,0,0,0">
			<TreeView
				x:Name="mIMActionsTreeView"
				Visibility="Collapsed"
				AllowDrop="True"
				ScrollViewer.CanContentScroll="True"
				ScrollViewer.HorizontalScrollBarVisibility="Auto"
				ScrollViewer.VerticalScrollBarVisibility="Auto"
				SelectedItemChanged="mIMActionsTreeView_SelectedItemChanged" />
		</Grid>
		<Grid
			x:Name="mActionJsonGrid"
			Column="3"
			Visibility="Collapsed"
			Margin="50,0,0,0">
			<Grid.RowDefinitions>
				<RowDefinition
					Height="*" />
				<RowDefinition
					Height="Auto" />
			</Grid.RowDefinitions>
			<TextBox
				x:Name="mActionTextBox"
				Grid.Row="0"
				ScrollViewer.VerticalScrollBarVisibility="Auto"
				ScrollViewer.CanContentScroll="True"
				IsEnabled="False" />
			<StackPanel
				Orientation="Horizontal"
				VerticalAlignment="Center"
				HorizontalAlignment="Center"
				Grid.Row="1">
				<Button
					x:Name="mEditButton"
					FontSize="16"
					Margin="5,10"
					Background="#9147ff"
					Foreground="#FFFFFFFF"
					Padding="10,5"
					Content="Edit"
					PreviewMouseLeftButtonUp="EditButton_PreviewMouseLeftButtonUp" />
				<Button
					x:Name="mSaveButton"
					Margin="5,10"
					Padding="10,5"
					Background="#9147ff"
					Foreground="#FFFFFFFF"
					FontSize="16"
					Content="Save"
					PreviewMouseLeftButtonUp="SaveButton_PreviewMouseLeftButtonUp" />
			</StackPanel>
		</Grid>
	</Grid>
</Common:CustomWindow>
