<controls:UserControl
	x:Class="BlueStacks.BlueStacksUI.MacroOverlay"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:BlueStacks.BlueStacksUI"
	xmlns:Common="clr-namespace:BlueStacks.Common;assembly=HD-Common"
	xmlns:controls="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
	DataContext="{Binding Source='{x:Static Common:BlueStacksUIBinding.Instance}'}">
	<Grid>
		<local:ProgressBar
			ProgressText="STRING_MACRO_RUNNING" />
		<Common:CustomPictureBox
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			Margin="15"
			Width="30"
			Height="30"
			ImageName="close"
			PreviewMouseLeftButtonUp="CloseButton_PreviewMouseLeftButtonUp" />
	</Grid>
</controls:UserControl>
