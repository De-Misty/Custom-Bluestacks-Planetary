<controls:UserControl
	x:Class="BlueStacks.BlueStacksUI.OtsFeedbackControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:BlueStacks.BlueStacksUI"
	xmlns:Common="clr-namespace:BlueStacks.Common;assembly=HD-Common"
	xmlns:controls="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
	DataContext="{Binding Source='{x:Static Common:BlueStacksUIBinding.Instance}'}">
	<FrameworkElement.Resources>
		<ResourceDictionary>
			<BooleanToVisibilityConverter
				x:Key="BooleanToVisibilityConverter" />
			<Style
				x:Key="MyWaterMarkStyle"
				TargetType="{x:Type TextBox}">
				<Setter
					Property="VerticalContentAlignment"
					Value="Center" />
				<Setter
					Property="TextBox.TextWrapping"
					Value="Wrap" />
				<Setter
					Property="Template">
					<Setter.Value>
						<ControlTemplate
							TargetType="{x:Type TextBox}">
							<Grid>
								<ScrollViewer
									x:Name="PART_ContentHost"
									VerticalAlignment="Top"
									Padding="0" />
								<Label
									x:Name="WaterMarkLabel"
									Content="{TemplateBinding FrameworkElement.Tag}"
									VerticalAlignment="Top"
									Visibility="Collapsed"
									Padding="0"
									FontWeight="ExtraLight"
									Background="{Binding Path=ColorModel.[SettingsWindowBackground]}"
									Foreground="{Binding Path=ColorModel.[SearchGridForegroundColor]}" />
							</Grid>
							<ControlTemplate.Triggers>
								<MultiTrigger>
									<MultiTrigger.Conditions>
										<Condition
											Property="Text"
											Value="" />
									</MultiTrigger.Conditions>
									<Setter
										TargetName="WaterMarkLabel"
										Property="Visibility"
										Value="Visible" />
								</MultiTrigger>
								<Trigger
									Property="IsEnabled"
									Value="False">
									<Setter
										Property="Foreground"
										Value="{Binding Path=ColorModel.[SettingsWindowTabMenuItemForeground]}" />
								</Trigger>
								<Trigger
									Property="IsEnabled"
									Value="True">
									<Setter
										Property="Background"
										Value="{Binding Path=ColorModel.[SettingsWindowBackground]}" />
								</Trigger>
								<Trigger
									Property="UIElement.IsMouseOver"
									Value="True">
									<Setter
										Property="Foreground"
										Value="{Binding Path=ColorModel.[SettingsWindowTabMenuItemForeground]}" />
									<Setter
										Property="Background"
										Value="{Binding Path=ColorModel.[SettingsWindowBackground]}" />
								</Trigger>
								<Trigger
									Property="UIElement.IsFocused"
									Value="True">
									<Setter
										TargetName="WaterMarkLabel"
										Property="Visibility"
										Value="Collapsed" />
								</Trigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>
		</ResourceDictionary>
	</FrameworkElement.Resources>
	<Border
		BorderThickness="1"
		SnapsToDevicePixels="True"
		BorderBrush="{Binding Path=ColorModel.[PopupBorderBrush]}"
		Background="{Binding Path=ColorModel.[SettingsWindowBackground]}">
		<ScrollViewer
			HorizontalScrollBarVisibility="Disabled"
			VerticalScrollBarVisibility="Auto">
			<Grid
				Margin="10">
				<Common:CustomPictureBox
					x:Name="mCloseBtn"
					Height="15"
					Width="15"
					Margin="0"
					HorizontalAlignment="Right"
					VerticalAlignment="Top"
					ImageName="exit_close"
					MouseLeftButtonUp="CloseBtn_MouseLeftButtonUp" />
				<StackPanel
					Orientation="Vertical">
					<StackPanel
						Orientation="Horizontal">
						<Common:CustomPictureBox
							ImageName="help"
							Margin="10,5,5,5"
							Height="18"
							Width="18" />
						<Label
							Margin="5"
							FontWeight="SemiBold"
							FontSize="16"
							Padding="0"
							Content="{Binding Path=LocaleModel.[STRING_LET_HELP], FallbackValue='Let us help you'}"
							Foreground="{Binding Path=ColorModel.[ContextMenuItemForegroundColor]}" />
					</StackPanel>
					<Label
						Margin="10,10,10,10"
						FontWeight="Regular"
						FontSize="14"
						Padding="0"
						Foreground="{Binding Path=ColorModel.[SettingsWindowTabMenuItemForeground]}">
						<TextBlock
							TextWrapping="WrapWithOverflow"
							Text="{Binding Path=LocaleModel.[STRING_OUTLINE_ISSUE], FallbackValue='Please describe the issue below so we can understand how we may help you.'}" />
					</Label>
					<Label
						Margin="10,5,10,5"
						FontWeight="Regular"
						FontSize="14"
						Padding="0"
						Content="{Binding Path=LocaleModel.[STRING_DESC_ISSUE], FallbackValue='Describe the issue'}"
						Foreground="{Binding Path=ColorModel.[ContextMenuItemForegroundColor]}" />
					<Grid
						Margin="10,5,10,5"
						Background="{Binding Path=ColorModel.[SearchTextBoxBackgroundColor]}">
						<Border
							BorderThickness="1"
							Background="#00FFFFFF"
							CornerRadius="5"
							Padding="5"
							BorderBrush="{Binding Path=ColorModel.[SettingsWindowTabMenuItemForeground]}">
							<TextBox
								x:Name="txtDescIssue"
								Style="{StaticResource MyWaterMarkStyle}"
								FontSize="14"
								MinHeight="80"
								AcceptsReturn="True"
								Background="{Binding Path=ColorModel.[SettingsWindowBackground]}"
								Foreground="{Binding Path=ColorModel.[SettingsWindowTabMenuItemForeground]}"
								Tag="{Binding Path=LocaleModel.[STRING_HOW_ISSUE], FallbackValue='What was your experience?'}" />
						</Border>
					</Grid>
					<Label
						Margin="10,10,10,5"
						FontWeight="Regular"
						FontSize="14"
						Padding="0"
						Content="{Binding Path=LocaleModel.[STRING_YOUR_EMAIL], FallbackValue='Your email address'}"
						Foreground="{Binding Path=ColorModel.[ContextMenuItemForegroundColor]}" />
					<Grid
						Margin="10,5,10,5"
						Background="{Binding Path=ColorModel.[SearchTextBoxBackgroundColor]}">
						<Border
							x:Name="txtEmailBorder"
							BorderThickness="1"
							Background="#00FFFFFF"
							CornerRadius="5"
							Padding="5"
							BorderBrush="{Binding Path=ColorModel.[SettingsWindowTabMenuItemForeground]}">
							<TextBox
								x:Name="txtEmail"
								Style="{StaticResource MyWaterMarkStyle}"
								FontSize="14"
								Tag="email@example.com"
								Background="{Binding Path=ColorModel.[SettingsWindowBackground]}"
								Foreground="{Binding Path=ColorModel.[SettingsWindowTabMenuItemForeground]}"
								TextChanged="txtEmail_TextChanged" />
						</Border>
					</Grid>
					<Label
						Margin="10,10,10,5"
						FontWeight="Regular"
						FontSize="14"
						Padding="0"
						Content="{Binding Path=LocaleModel.[STRING_YOUR_PHONE], FallbackValue='Your phone number'}"
						Foreground="{Binding Path=ColorModel.[ContextMenuItemForegroundColor]}" />
					<Grid
						Margin="10,5,10,5"
						Background="{Binding Path=ColorModel.[SearchTextBoxBackgroundColor]}">
						<Border
							x:Name="txtPhoneBorder"
							BorderThickness="1"
							Background="#00FFFFFF"
							CornerRadius="5"
							Padding="5"
							BorderBrush="{Binding Path=ColorModel.[SettingsWindowTabMenuItemForeground]}">
							<TextBox
								x:Name="txtPhone"
								Style="{StaticResource MyWaterMarkStyle}"
								FontSize="14"
								Background="{Binding Path=ColorModel.[SettingsWindowBackground]}"
								Foreground="{Binding Path=ColorModel.[SettingsWindowTabMenuItemForeground]}"
								Tag="{Binding Path=LocaleModel.[STRING_TEN_PHONE_NUMBER], FallbackValue='Your phone number including country code'}"
								TextChanged="txtPhone_TextChanged" />
						</Border>
					</Grid>
					<Common:CustomButton
						Margin="10,10,10,5"
						ButtonColor="Blue"
						HorizontalAlignment="Right"
						Height="30"
						FontSize="14"
						Content="{Binding Path=LocaleModel.[STRING_SUBMIT], FallbackValue=Submit}"
						Click="SubmitButton_Click" />
				</StackPanel>
			</Grid>
		</ScrollViewer>
	</Border>
</controls:UserControl>
