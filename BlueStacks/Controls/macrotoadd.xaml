<controls:UserControl
	x:Class="BlueStacks.BlueStacksUI.MacroToAdd"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:BlueStacks.BlueStacksUI.Controls"
	xmlns:Common="clr-namespace:BlueStacks.Common;assembly=HD-Common"
	Background="#00FFFFFF"
	Height="36"
	Width="Auto"
	xmlns:bluestacksui="clr-namespace:BlueStacks.BlueStacksUI"
	xmlns:controls="clr-namespace:System.Windows.Controls;assembly=PresentationFramework">
	<Grid
		Margin="16,0,16,0">
		<TextBlock
			x:Name="mMacroName"
			FontSize="14"
			Margin="0, 0, 16, 0"
			TextTrimming="CharacterEllipsis"
			HorizontalAlignment="Left"
			VerticalAlignment="Center"
			Text="{Binding Path=LocaleModel.[STRING_DEFAULT], FallbackValue=Default}"
			ToolTip="{Binding Path=Text, RelativeSource={RelativeSource self}}"
			Foreground="{Binding Path=ColorModel.[SettingsWindowTabMenuItemLegendForeground]}"
			SizeChanged="MacroName_SizeChanged" />
		<Common:CustomPictureBox
			x:Name="mAddMacro"
			ImageName="additem"
			HorizontalAlignment="Right"
			VerticalAlignment="Center"
			Height="14"
			Width="14"
			ToolTip="{Binding Path=LocaleModel.[STRING_ADD], FallbackValue=Add}"
			MouseLeftButtonUp="AddMacro_MouseLeftButtonUp" />
	</Grid>
</controls:UserControl>
