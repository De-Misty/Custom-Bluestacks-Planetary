<controls:UserControl
	x:Class="BlueStacks.BlueStacksUI.SingleMacroControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:BlueStacks.BlueStacksUI"
	xmlns:Common="clr-namespace:BlueStacks.Common;assembly=HD-Common"
	Height="40"
	Width="585"
	xmlns:controls="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
	DataContext="{Binding Source='{x:Static Common:BlueStacksUIBinding.Instance}'}"
	MouseEnter="SingleMacroControl_MouseEnter"
	MouseLeave="SingleMacroControl_MouseLeave"
	Loaded="ScriptControl_Loaded">
	<Grid
		x:Name="mGrid">
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="15" />
			<ColumnDefinition
				Width="Auto" />
			<ColumnDefinition
				Width="*" />
			<ColumnDefinition
				Width="Auto" />
		</Grid.ColumnDefinitions>
		<Common:CustomPictureBox
			x:Name="mBookmarkImg"
			Grid.Column="1"
			HorizontalAlignment="Center"
			ImageName="bookmark"
			Height="16"
			Width="16"
			Margin="0,0,5,0"
			ToolTip="{Binding Path=LocaleModel.[STRING_BOOKMARK], FallbackValue=Bookmark}"
			PreviewMouseLeftButtonUp="BookMarkScriptImg_PreviewMouseLeftButtonUp" />
		<Grid
			x:Name="mScriptNameGrid"
			Column="2"
			Margin="5 0 0 0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="*" />
				<ColumnDefinition
					Width="Auto" />
				<ColumnDefinition
					Width="Auto" />
				<ColumnDefinition
					Width="Auto" />
			</Grid.ColumnDefinitions>
			<Grid
				Column="0">
				<Grid.RowDefinitions>
					<RowDefinition
						Height="*" />
					<RowDefinition
						Height="Auto" />
					<RowDefinition
						Height="*" />
				</Grid.RowDefinitions>
				<Grid
					Row="1"
					VerticalAlignment="Center">
					<Grid.RowDefinitions>
						<RowDefinition
							Height="*" />
						<RowDefinition
							Height="*" />
					</Grid.RowDefinitions>
					<Common:CustomTextBox
						x:Name="mScriptName"
						Grid.Row="0"
						Text="PUBG multi kills"
						IsReadOnly="True"
						Focusable="False"
						VerticalAlignment="Bottom"
						HorizontalAlignment="Left"
						PreviewLostKeyboardFocus="ScriptName_LostKeyboardFocus"
						LostFocus="ScriptName_LostFocus"
						MouseLeftButtonUp="NoSelection_MouseUp"
						KeyDown="ScriptName_KeyDown" />
					<TextBlock
						x:Name="mUserNameTextblock"
						HorizontalAlignment="Left"
						Grid.Row="1"
						Visibility="Collapsed"
						VerticalAlignment="Top"
						FontSize="10"
						Foreground="{Binding Path=ColorModel.[SettingsWindowTabMenuItemForeground]}">
						<Hyperlink
							x:Name="mUserNameHyperlink"
							Style="{StaticResource HyperlinkStyle}"
							RequestNavigate="Hyperlink_RequestNavigate"
							Loaded="UserNameHyperlink_Loaded">Hey You</Hyperlink>
					</TextBlock>
				</Grid>
			</Grid>
			<Common:CustomPictureBox
				Name="mEditNameImg"
				Grid.Column="1"
				Visibility="Hidden"
				Width="16"
				HorizontalAlignment="Right"
				VerticalAlignment="Center"
				ImageName="edit_icon"
				Height="16"
				Margin="5,0"
				ToolTip="{Binding Path=LocaleModel.[STRING_RENAME], FallbackValue=Rename}"
				MouseLeftButtonDown="EditMacroName_MouseDown" />
			<TextBlock
				x:Name="mTimestamp"
				Grid.Column="2"
				Width="Auto"
				IsEnabled="False"
				FontSize="12"
				Margin="0 0 10 0"
				VerticalAlignment="Center"
				HorizontalAlignment="Right"
				Foreground="{Binding Path=ColorModel.[SettingsWindowForegroundDimDimDimColor]}" />
			<TextBlock
				Name="mPrefix"
				Grid.Row="0"
				Grid.Column="3"
				Width="Auto"
				IsEnabled="False"
				Text="Ctrl + Alt + "
				FontSize="12"
				Margin="5 0 5 0"
				VerticalAlignment="Center"
				HorizontalAlignment="Right"
				Foreground="{Binding Path=ColorModel.[SettingsWindowForegroundDimDimDimColor]}" />
		</Grid>
		<StackPanel
			Grid.Column="3"
			Margin="0,0,6,0"
			Orientation="Horizontal"
			HorizontalAlignment="Right">
			<Common:CustomTextBox
				x:Name="mMacroShortcutTextBox"
				Text="Shift"
				FontSize="12"
				MaxLength="1"
				CharacterCasing="Upper"
				FontWeight="Bold"
				TextAlignment="Center"
				Height="24"
				Width="24"
				PreviewKeyDown="MacroShortcutPreviewKeyDown" />
			<StackPanel
				x:Name="mScriptPlayPanel"
				Orientation="Horizontal"
				Visibility="Visible"
				Width="145"
				HorizontalAlignment="Right"
				Margin="5 0 0 0">
				<Common:CustomPictureBox
					x:Name="mAutorunImage"
					HorizontalAlignment="Center"
					ImageName="autorun_macro"
					Height="16"
					Width="16"
					Margin="5"
					Visibility="Hidden"
					ToolTip="{Binding Path=LocaleModel.[STRING_EXECUTE_SCRIPT_ON_RESTART]}"
					PreviewMouseLeftButtonUp="BookMarkScriptImg_PreviewMouseLeftButtonUp" />
				<Common:CustomPictureBox
					x:Name="mCommunityMacroImage"
					HorizontalAlignment="Center"
					ImageName="community_macro"
					Height="16"
					Width="16"
					Margin="5"
					Visibility="Hidden"
					ToolTip="{Binding Path=LocaleModel.[STRING_OPEN_COMMUNITY_PAGE], FallbackValue='Open macro community page'}"
					PreviewMouseLeftButtonUp="CommunityMacroPage_PreviewMouseLeftButtonUp" />
				<Common:CustomPictureBox
					x:Name="mPlayScriptImg"
					HorizontalAlignment="Right"
					ImageName="play"
					Height="16"
					Width="16"
					Margin="5"
					ToolTip="{Binding Path=LocaleModel.[STRING_PLAY], FallbackValue=Play}"
					PreviewMouseLeftButtonUp="PlayScriptImg_PreviewMouseLeftButtonUp" />
				<Common:CustomPictureBox
					x:Name="mScriptSettingsImg"
					HorizontalAlignment="Right"
					ImageName="macro_settings"
					Height="16"
					Width="16"
					Margin="5"
					ToolTip="{Binding Path=LocaleModel.[STRING_SETTINGS], FallbackValue=Settings}"
					PreviewMouseLeftButtonUp="ScriptSettingsImg_PreviewMouseLeftButtonUp" />
				<Common:CustomPictureBox
					x:Name="mMergeScriptSettingsImg"
					HorizontalAlignment="Right"
					ImageName="mergesettings"
					Height="16"
					Width="16"
					Margin="5"
					Visibility="Collapsed"
					ToolTip="{Binding Path=LocaleModel.[STRING_MERGE_SETTINGS], FallbackValue='Merge Settings'}"
					PreviewMouseLeftButtonUp="ScriptSettingsImg_PreviewMouseLeftButtonUp" />
				<Common:CustomPictureBox
					x:Name="mDeleteScriptImg"
					HorizontalAlignment="Right"
					ImageName="macro_delete"
					Height="16"
					Width="16"
					Margin="5"
					ToolTip="{Binding Path=LocaleModel.[STRING_DELETE], FallbackValue=Delete}"
					PreviewMouseLeftButtonUp="DeleteScriptImg_PreviewMouseLeftButtonUp" />
			</StackPanel>
			<StackPanel
				x:Name="mScriptRunningPanel"
				Orientation="Horizontal"
				Visibility="Collapsed"
				Width="145"
				Margin="5 0 0 0"
				HorizontalAlignment="Right">
				<Common:CustomPictureBox
					x:Name="mStopScriptImg"
					HorizontalAlignment="Right"
					ImageName="stop_title_bar"
					Height="16"
					Width="16"
					Margin="60, 5, 5, 5"
					ToolTip="{Binding Path=LocaleModel.[STRING_STOP], FallbackValue=Stop}"
					PreviewMouseLeftButtonUp="StopScriptImg_PreviewMouseLeftButtonUp" />
				<TextBlock
					Name="mRunning"
					MaxWidth="50"
					Margin="0,0,5,0"
					VerticalAlignment="Center"
					TextTrimming="CharacterEllipsis"
					FontSize="12"
					Text="{Binding Path=LocaleModel.[STRING_RUNNING], FallbackValue=Running}"
					ToolTip="{Binding Path=LocaleModel.[STRING_RUNNING], FallbackValue=Running}"
					Foreground="{Binding Path=ColorModel.[InstallerWindowTextForeground]}" />
			</StackPanel>
		</StackPanel>
	</Grid>
</controls:UserControl>
