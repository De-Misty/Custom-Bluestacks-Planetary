<controls:UserControl
	x:Class="BlueStacks.BlueStacksUI.BlurbMessageControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:BlueStacks.BlueStacksUI"
	xmlns:Common="clr-namespace:BlueStacks.Common;assembly=HD-Common"
	xmlns:controls="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
	DataContext="{Binding Source='{x:Static Common:BlueStacksUIBinding.Instance}'}">
	<TextBlock
		FontSize="16"
		TextWrapping="WrapWithOverflow"
		Foreground="{Binding ColorModel.[BlueMouseOutForeGround]}">
		<Run
			x:Name="FirstMessage" /> <InlineUIContainer
			BaselineAlignment="Center"><Border
				BorderThickness="1"
				Background="#00FFFFFF"
				CornerRadius="2"
				Margin="0,4,0,4"
				Padding="4"
				BorderBrush="{Binding ColorModel.[BlueMouseOutForeGround]}"><TextBlock
					Name="KeyMessage" /></Border></InlineUIContainer> <Run
			x:Name="SecondMessage" /></TextBlock>
</controls:UserControl>
