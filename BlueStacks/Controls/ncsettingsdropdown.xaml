<controls:UserControl
	x:Class="BlueStacks.BlueStacksUI.SettingsWindowDropdown"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:BlueStacks.BlueStacksUI"
	xmlns:Common="clr-namespace:BlueStacks.Common;assembly=HD-Common"
	xmlns:controls="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
	Background="{Binding Path=ColorModel.[ContextMenuItemBackgroundColor]}"
	DataContext="{Binding Source='{x:Static Common:BlueStacksUIBinding.Instance}'}">
	<FrameworkElement.Resources>
		<ResourceDictionary>
			<Style
				x:Key="TextblockStyle"
				TargetType="{x:Type TextBlock}">
				<Setter
					Property="Foreground"
					Value="{Binding Path=ColorModel.[SettingsWindowTabMenuItemForeground]}" />
				<Setter
					Property="FontSize"
					Value="13.5" />
				<Setter
					Property="VerticalAlignment"
					Value="Center" />
				<Setter
					Property="Margin"
					Value="10,0,0,2" />
				<Setter
					Property="Grid.Column"
					Value="1" />
			</Style>
			<Style
				x:Key="ControlGridStyle"
				TargetType="{x:Type Grid}">
				<Setter
					Property="Background"
					Value="#00FFFFFF" />
				<Setter
					Property="Height"
					Value="24" />
				<Setter
					Property="HorizontalAlignment"
					Value="Stretch" />
				<Setter
					Property="Margin"
					Value="0,0,0,3" />
			</Style>
			<Style
				x:Key="CustomPictureBoxStyle"
				TargetType="{x:Type Common:CustomPictureBox}">
				<Setter
					Property="Width"
					Value="16" />
				<Setter
					Property="Height"
					Value="16" />
				<Setter
					Property="Margin"
					Value="10,0,0,0" />
			</Style>
			<Style
				x:Key="CenteredHorizontalOffsetStyle"
				TargetType="{x:Type Popup}">
				<Setter
					Property="Popup.HorizontalOffset">
					<Setter.Value>
						<MultiBinding
							Converter="{Common:CenterToolTipConverter}">
							<Binding
								Path="PlacementTarget.ActualWidth"
								RelativeSource="{RelativeSource Self}" />
							<Binding
								Path="Child.ActualWidth"
								RelativeSource="{RelativeSource Self}" />
						</MultiBinding>
					</Setter.Value>
				</Setter>
			</Style>
		</ResourceDictionary>
	</FrameworkElement.Resources>
	<Grid
		Margin="0,10,0,10">
		<StackPanel
			Orientation="Vertical">
			<Grid
				x:Name="mPinOnTopButtonGrid"
				Style="{StaticResource ControlGridStyle}"
				Margin="0 0 0 4"
				MouseEnter="Grid_MouseEnter"
				MouseLeave="Grid_MouseLeave">
				<Grid.ColumnDefinitions>
					<ColumnDefinition
						Width="Auto" />
					<ColumnDefinition
						Width="Auto" />
					<ColumnDefinition
						Width="*" />
				</Grid.ColumnDefinitions>
				<Common:CustomPictureBox
					x:Name="mPinOnTopButtonImage"
					ImageName="menu_pin_to_top"
					Style="{StaticResource CustomPictureBoxStyle}" />
				<TextBlock
					x:Name="mPinOnTopButtonText"
					Style="{StaticResource TextblockStyle}"
					Text="{Binding Path=LocaleModel.[STRING_PIN_TOP], FallbackValue='Pin top'}" />
				<Common:CustomPictureBox
					x:Name="mPinOnTopToggleButton"
					Grid.Column="2"
					HorizontalAlignment="Right"
					VerticalAlignment="Center"
					ImageName="toggle_off"
					Margin="0,0,15,0"
					Width="24"
					Height="12"
					PreviewMouseLeftButtonUp="PinOnTop_MouseLeftButtonUp" />
			</Grid>
			<Grid
				x:Name="mFullScreenButtonGrid"
				Style="{StaticResource ControlGridStyle}"
				Margin="0 4 0 4"
				MouseEnter="Grid_MouseEnter"
				MouseLeave="Grid_MouseLeave"
				PreviewMouseLeftButtonUp="FullscreenButton_MouseLeftButtonUp">
				<Grid.ColumnDefinitions>
					<ColumnDefinition
						Width="Auto" />
					<ColumnDefinition
						Width="Auto" />
				</Grid.ColumnDefinitions>
				<Common:CustomPictureBox
					x:Name="mFullScreenImage"
					ImageName="menu_fullscreen"
					Style="{StaticResource CustomPictureBoxStyle}" />
				<TextBlock
					x:Name="mFullScreenButtonText"
					Style="{StaticResource TextblockStyle}"
					Text="{Binding Path=LocaleModel.[STRING_Fullscreen], FallbackValue=Fullscreen}" />
			</Grid>
			<Grid
				x:Name="mSyncOperationsButtonGrid"
				Style="{StaticResource ControlGridStyle}"
				Margin="0 4 0 4"
				MouseLeave="Grid_MouseLeave"
				MouseEnter="Grid_MouseEnter"
				PreviewMouseLeftButtonUp="SyncOperationsButton_PreviewMouseLeftButtonUp">
				<Grid.ColumnDefinitions>
					<ColumnDefinition
						Width="Auto" />
					<ColumnDefinition
						Width="Auto" />
				</Grid.ColumnDefinitions>
				<Common:CustomPictureBox
					x:Name="mSyncOperationsButtonImage"
					ImageName="menu_sync"
					Style="{StaticResource CustomPictureBoxStyle}" />
				<TextBlock
					x:Name="mSyncOperationsButtonText"
					Style="{StaticResource TextblockStyle}"
					Text="{Binding Path=LocaleModel.[STRING_SYNC_OPERATIONS], FallbackValue='Sync Operations'}" />
			</Grid>
			<Grid
				x:Name="mSortingGrid"
				Style="{StaticResource ControlGridStyle}"
				Margin="0 4 0 4"
				MouseEnter="Grid_MouseEnter"
				MouseLeave="Grid_MouseLeave"
				PreviewMouseLeftButtonUp="SortingButton_MouseLeftButtonUp">
				<Grid.ColumnDefinitions>
					<ColumnDefinition
						Width="Auto" />
					<ColumnDefinition
						Width="Auto" />
				</Grid.ColumnDefinitions>
				<Common:CustomPictureBox
					x:Name="mSortingButtonImage"
					ImageName="menu_arrange"
					Style="{StaticResource CustomPictureBoxStyle}" />
				<TextBlock
					x:Name="mSortingButtonText"
					Style="{StaticResource TextblockStyle}"
					Margin="10,0,20,2"
					Text="{Binding Path=LocaleModel.[STRING_AUTOMATIC_SORTING], FallbackValue='Automatic sorting'}" />
			</Grid>
			<Grid
				x:Name="mAccountGrid"
				Style="{StaticResource ControlGridStyle}"
				Margin="0 4 0 4"
				MouseEnter="Grid_MouseEnter"
				MouseLeave="Grid_MouseLeave"
				PreviewMouseLeftButtonUp="AccountButton_MouseLeftButtonUp">
				<Grid.ColumnDefinitions>
					<ColumnDefinition
						Width="Auto" />
					<ColumnDefinition
						Width="Auto" />
				</Grid.ColumnDefinitions>
				<Common:CustomPictureBox
					x:Name="mAccountButtonImage"
					ImageName="menu_account"
					Style="{StaticResource CustomPictureBoxStyle}" />
				<TextBlock
					x:Name="mAccountButtonText"
					Style="{StaticResource TextblockStyle}"
					Text="{Binding Path='LocaleModel.[STRING_ACCOUNT ]', FallbackValue=Account}" />
			</Grid>
			<Grid
				x:Name="mSettingsButtonGrid"
				Style="{StaticResource ControlGridStyle}"
				Margin="0 4 0 4"
				MouseEnter="Grid_MouseEnter"
				MouseLeave="Grid_MouseLeave"
				PreviewMouseLeftButtonUp="SettingsButton_MouseLeftButtonUp">
				<Grid.ColumnDefinitions>
					<ColumnDefinition
						Width="Auto" />
					<ColumnDefinition
						Width="Auto" />
				</Grid.ColumnDefinitions>
				<Common:CustomPictureBox
					x:Name="mSettingsButtonImage"
					ImageName="menu_gear"
					Style="{StaticResource CustomPictureBoxStyle}" />
				<TextBlock
					x:Name="mSettingsButtonText"
					Style="{StaticResource TextblockStyle}"
					Text="{Binding Path=LocaleModel.[STRING_SETTINGS], FallbackValue=Settings}" />
			</Grid>
		</StackPanel>
	</Grid>
</controls:UserControl>
