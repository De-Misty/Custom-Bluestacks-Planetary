<controls:UserControl
	x:Class="BlueStacks.BlueStacksUI.PreferencesSettingsControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:Common="clr-namespace:BlueStacks.Common;assembly=HD-Common"
	xmlns:local="clr-namespace:BlueStacks.BlueStacksUI"
	xmlns:controls="clr-namespace:System.Windows.Controls;assembly=PresentationFramework">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="*" />
			<RowDefinition
				Height="75" />
		</Grid.RowDefinitions>
		<ScrollViewer
			x:Name="mScrollBar"
			VerticalScrollBarVisibility="Auto"
			HorizontalScrollBarVisibility="Disabled">
			<UIElement.OpacityMask>
				<LinearGradientBrush
					StartPoint="0,0"
					EndPoint="0,1">
					<GradientStop
						Color="Transparent"
						Offset="0" />
					<GradientStop
						Color="#FF000000"
						Offset=".15" />
					<GradientStop
						Color="#FF000000"
						Offset=".8" />
					<GradientStop
						Color="Transparent"
						Offset="1" />
				</LinearGradientBrush>
			</UIElement.OpacityMask>
			<Grid
				x:Name="mMainGrid"
				Margin="30,25,20,15">
				<Grid.RowDefinitions>
					<RowDefinition
						Height="Auto" />
					<RowDefinition
						Height="Auto" />
					<RowDefinition
						Height="Auto" />
					<RowDefinition
						Height="Auto" />
					<RowDefinition
						Height="Auto" />
					<RowDefinition
						Height="Auto" />
					<RowDefinition
						Height="Auto" />
				</Grid.RowDefinitions>
				<Grid
					x:Name="mLanguageSettingsGrid"
					Row="0">
					<Grid.RowDefinitions>
						<RowDefinition
							Height="Auto" />
						<RowDefinition
							Height="Auto" />
					</Grid.RowDefinitions>
					<Label
						Grid.Row="0"
						HorizontalAlignment="Left"
						Margin="0,0,0,15">
						<TextBlock
							FontWeight="Normal"
							FontSize="16"
							Padding="0"
							Text="{Binding Path=LocaleModel.[STRING_LANGUAGE_SETTING], FallbackValue='Language settings'}"
							Foreground="{Binding Path=ColorModel.[SettingsWindowTabMenuItemLegendForeground]}" />
					</Label>
					<Common:CustomComboBox
						x:Name="mLanguageCombobox"
						Grid.Row="1"
						MaxDropDownHeight="150"
						Width="190"
						HorizontalAlignment="Left"
						Margin="5,0,0,0"
						FontSize="15"
						SelectionChanged="mLanguageCombobox_SelectionChanged" />
				</Grid>
				<Grid
					x:Name="mLanguagePreferencePaddingGrid"
					Row="1"
					Height="30" />
				<Grid
					x:Name="mPerformancePreference"
					Row="2">
					<Grid.RowDefinitions>
						<RowDefinition
							Height="Auto" />
						<RowDefinition
							Height="Auto" />
						<RowDefinition
							Height="Auto" />
						<RowDefinition
							Height="Auto" />
						<RowDefinition
							Height="Auto" />
					</Grid.RowDefinitions>
					<Label
						x:Name="mPerformanceSettingsLabel"
						Grid.Row="0"
						HorizontalAlignment="Left"
						Margin="0,0,0,15">
						<TextBlock
							FontSize="16"
							Padding="0"
							Text="{Binding Path=LocaleModel.[STRING_PERFORMANCE_SETTINGS], FallbackValue='Performance settings'}"
							Foreground="{Binding Path=ColorModel.[SettingsWindowTabMenuItemLegendForeground]}" />
					</Label>
					<Common:CustomCheckbox
						x:Name="mSwitchToHome"
						Grid.Row="1"
						HorizontalAlignment="Left"
						Height="30"
						FontSize="12"
						Margin="5,0,0,10"
						Content="{Binding Path=LocaleModel.[STRING_SWITCH_HOME], FallbackValue='Switch to android home'}"
						Click="mSwitchToHome_Click" />
					<Common:CustomCheckbox
						x:Name="mSwitchKillWebTab"
						Grid.Row="2"
						HorizontalAlignment="Left"
						Margin="5,0,0,10"
						Height="30"
						FontSize="12"
						Content="{Binding Path=LocaleModel.[STRING_KILL_WEBTAB], FallbackValue='Kill webpages when running game'}"
						Click="SwitchKillWebTab_Click" />
					<Common:CustomCheckbox
						x:Name="mEnableMemoryTrim"
						Grid.Row="3"
						HorizontalAlignment="Left"
						Margin="5,0,0,3"
						Height="25"
						FontSize="12"
						Content="{Binding Path=LocaleModel.[STRING_ENABLE_MEMORY_TRIM], FallbackValue='Enable periodic memory trimming'}"
						Click="EnableMemoryTrim_Click" />
					<TextBlock
						x:Name="mEnableMemoryTrimWarning"
						Grid.Row="4"
						Margin="35,0,0,0"
						FontSize="14"
						TextWrapping="WrapWithOverflow"
						Width="450"
						HorizontalAlignment="Left"
						Foreground="{Binding Path=ColorModel.[OrangeMouseOutBorderBackground]}"
						Text="{Binding Path=LocaleModel.[STRING_ENABLE_MEMORY_TRIM_WARNING], FallbackValue='May slow down gameplay or FPS.'}" />
				</Grid>
				<Grid
					x:Name="mGameControlPreferencePaddingGrid"
					Row="3"
					Height="30" />
				<Grid
					x:Name="mGameControlsSettingsGrid"
					Row="4">
					<Grid.RowDefinitions>
						<RowDefinition
							Height="Auto" />
						<RowDefinition
							Height="Auto" />
						<RowDefinition
							Height="Auto" />
					</Grid.RowDefinitions>
					<Label
						x:Name="mGameControlSettingsLabel"
						Grid.Row="0"
						HorizontalAlignment="Left"
						Margin="0,0,0,15">
						<TextBlock
							FontSize="16"
							Padding="0"
							Text="{Binding Path=LocaleModel.[STRING_GAME_CONTROLS_SETTINGS], FallbackValue='Game control settings'}"
							Foreground="{Binding Path=ColorModel.[SettingsWindowTabMenuItemLegendForeground]}" />
					</Label>
					<StackPanel
						x:Name="mGameControlsStackPanel"
						Grid.Row="1"
						Orientation="Vertical"
						HorizontalAlignment="Left">
						<Common:CustomCheckbox
							x:Name="mEnableGamePadCheckbox"
							HorizontalAlignment="Left"
							Margin="5,0,0,10"
							Height="30"
							FontSize="16"
							Content="{Binding Path=LocaleModel.[STRING_ENABLE_GAMEPAD], FallbackValue='Enable gamepad detection'}"
							Click="CheckBox_Click" />
						<StackPanel
							Orientation="Horizontal"
							Margin="0,-5,0,0"
							IsEnabled="{Binding ElementName=mEnableGamePadCheckbox, Path=IsChecked}">
							<Common:CustomTextBlock
								HorizontalAlignment="Left"
								Margin="35,0,0,0"
								Height="30"
								FontSize="16"
								MaxWidth="410"
								Text="{Binding Path=LocaleModel.[STRING_USE_NATIVE_GAMEPAD]}" />
							<Common:CustomPictureBox
								x:Name="mHelpIcon"
								Margin="5,0,5,5"
								ImageName="menu_help"
								Height="18"
								Width="18"
								Cursor="Hand"
								ToolTip="{Binding Path=LocaleModel.[STRING_HELP_AND_SUPPORT], FallbackValue=Help}"
								PreviewMouseLeftButtonUp="HelpIconPreviewMouseLeftButtonUp">
								<FrameworkElement.Style>
									<Style
										TargetType="{x:Type Common:CustomPictureBox}">
										<Style.Triggers>
											<Trigger
												Property="IsEnabled"
												Value="False">
												<Setter
													Property="UIElement.Opacity"
													Value="0.5" />
											</Trigger>
										</Style.Triggers>
									</Style>
								</FrameworkElement.Style>
							</Common:CustomPictureBox>
						</StackPanel>
						<Grid
							x:Name="mEnableNativeGamepad"
							Margin="35,0,0,0">
							<Grid.ColumnDefinitions>
								<ColumnDefinition
									Width="*" />
								<ColumnDefinition
									Width="*" />
								<ColumnDefinition
									Width="*" />
							</Grid.ColumnDefinitions>
							<Common:CustomRadioButton
								x:Name="mForcedOnMode"
								Height="20"
								FontSize="14"
								GroupName="NativeGamepadValue"
								Grid.Column="0"
								HorizontalAlignment="Left"
								Margin="0"
								Content="{Binding Path=LocaleModel.[STRING_FORCE_ON], FallbackValue='Force on'}"
								Click="NativeGamepadMode_Click" />
							<Common:CustomRadioButton
								x:Name="mForcedOffMode"
								Height="20"
								FontSize="14"
								GroupName="NativeGamepadValue"
								Grid.Column="1"
								HorizontalAlignment="Left"
								Margin="0"
								Content="{Binding Path=LocaleModel.[STRING_FORCE_OFF], FallbackValue='Force off'}"
								Click="NativeGamepadMode_Click" />
							<Common:CustomRadioButton
								x:Name="mAutoMode"
								Height="20"
								FontSize="14"
								GroupName="NativeGamepadValue"
								Grid.Column="2"
								HorizontalAlignment="Left"
								Margin="0"
								IsChecked="True"
								Content="{Binding Path=LocaleModel.[STRING_AUTO], FallbackValue=Auto}"
								Click="NativeGamepadMode_Click" />
						</Grid>
						<Grid
							x:Name="mNativeGamepadInfo"
							Visibility="Collapsed"
							Margin="61,0,0,10">
							<TextBlock
								FontSize="14"
								TextWrapping="WrapWithOverflow"
								Width="420"
								HorizontalAlignment="Left"
								Text="{Binding Path=LocaleModel.[STRING_NATIVE_GAMEPAD_INFO]}"
								Foreground="{Binding Path=ColorModel.[OrangeMouseOutBorderBackground]}" />
						</Grid>
						<Common:CustomCheckbox
							x:Name="mShowSchemeDeleteWarning"
							HorizontalAlignment="Left"
							Margin="5,10,0,0"
							Height="30"
							FontSize="16"
							Content="{Binding Path=LocaleModel.[STRING_WARN_BEFORE_DELETING_SCHEME], FallbackValue='Warn before deleting a control scheme'}"
							Click="CheckBox_Click" />
					</StackPanel>
				</Grid>
				<Grid
					x:Name="mPerformancePreferencePaddingGrid"
					Row="5"
					Height="30" />
				<Grid
					Row="6">
					<Grid.RowDefinitions>
						<RowDefinition
							Height="Auto" />
						<RowDefinition
							Height="Auto" />
						<RowDefinition
							Height="Auto" />
						<RowDefinition
							Height="Auto" />
						<RowDefinition
							Height="Auto" />
					</Grid.RowDefinitions>
					<Label
						Grid.Row="0"
						HorizontalAlignment="Left"
						Margin="0,0,0,15">
						<TextBlock
							FontSize="16"
							Padding="0"
							Text="{Binding Path=LocaleModel.[STRING_PLATFORM_SETTINGS], FallbackValue='Platform settings'}"
							Foreground="{Binding Path=ColorModel.[SettingsWindowTabMenuItemLegendForeground]}" />
					</Label>
					<Grid
						Row="1"
						Margin="0,0,0,20">
						<StackPanel
							x:Name="mPlatformStackPanel"
							Orientation="Vertical"
							HorizontalAlignment="Left">
							<Common:CustomCheckbox
								x:Name="mAddDesktopShortcuts"
								HorizontalAlignment="Left"
								Margin="5,0,0,10"
								Height="30"
								FontSize="12"
								Content="{Binding Path=LocaleModel.[STRING_ADD_ICONS], FallbackValue='Add desktop icons for installed apps'}"
								Click="CheckBox_Click" />
							<Common:CustomCheckbox
								x:Name="mShowGamingSummary"
								HorizontalAlignment="Left"
								Margin="5,0,0,10"
								Height="30"
								FontSize="12"
								Content="{Binding Path=LocaleModel.[STRING_SHOW_GAMING], FallbackValue='Show gaming summary on close'}"
								Click="CheckBox_Click" />
							<Common:CustomCheckbox
								x:Name="mShowMacroDeleteWarning"
								HorizontalAlignment="Left"
								Margin="5,0,0,10"
								Height="30"
								FontSize="16"
								Content="{Binding Path=LocaleModel.[STRING_WARN_BEFORE_DELETING_MACRO], FallbackValue='Warn before deleting a macro script'}"
								Click="CheckBox_Click" />
							<Common:CustomCheckbox
								x:Name="mDiscordCheckBox"
								HorizontalAlignment="Left"
								Margin="5,0,0,10"
								Height="30"
								FontSize="16"
								Content="{Binding Path=LocaleModel.[STRING_CONNECT_DISCORD_BST], FallbackValue='Allow BlueStacks to connect with Discord'}"
								Click="CheckBox_Click" />
							<Common:CustomCheckbox
								x:Name="mEnableAdbCheckBox"
								HorizontalAlignment="Left"
								Margin="5,0,0,3"
								Height="25"
								FontSize="16"
								Content="{Binding Path=LocaleModel.[STRING_ENABLE_ADB], FallbackValue='Enable Android Debug Bridge'}"
								Click="CheckBox_Click" />
							<TextBlock
								x:Name="mEnableAdbWarning"
								Margin="35,0,0,10"
								FontSize="14"
								TextWrapping="WrapWithOverflow"
								Width="450"
								HorizontalAlignment="Left"
								Foreground="{Binding Path=ColorModel.[OrangeMouseOutBorderBackground]}"
								Text="{Binding Path=LocaleModel.[STRING_ENABLE_ADB_WARNING], FallbackValue='BlueStacks may not be fully protected with this setting turned on. You may consider turning it off afterwards'}" />
						</StackPanel>
					</Grid>
					<Grid
						x:Name="mInputGrid"
						Row="2">
						<Grid.RowDefinitions>
							<RowDefinition
								Height="auto" />
							<RowDefinition
								Height="auto" />
						</Grid.RowDefinitions>
						<Label
							Grid.Row="0"
							HorizontalAlignment="Left"
							Margin="0,0,0,10">
							<TextBlock
								FontSize="16"
								Padding="0"
								Text="{Binding Path=LocaleModel.[STRING_INPUT_DEBUGGING], FallbackValue='Input debugging'}"
								Foreground="{Binding Path=ColorModel.[SettingsWindowTabMenuItemLegendForeground]}" />
						</Label>
						<StackPanel
							Grid.Row="1"
							Margin="0,0,0,20"
							Orientation="Vertical"
							HorizontalAlignment="Left">
							<Common:CustomCheckbox
								x:Name="mEnableTouchPointsCheckBox"
								HorizontalAlignment="Left"
								Margin="5,0,0,10"
								Height="25"
								FontSize="16"
								Content="{Binding Path=LocaleModel.[STRING_SHOW_VISUAL_FEEDBACK_FOR_TAPS], FallbackValue='Show visual feedback for taps'}"
								Click="CheckBox_Click" />
							<Common:CustomCheckbox
								x:Name="mEnableTouchCoordinatesCheckbox"
								HorizontalAlignment="Left"
								Margin="5,0,0,3"
								Height="25"
								FontSize="16"
								Content="{Binding Path=LocaleModel.[STRING_SHOW_POINTER_LOCATION_FOR_TOUCH_DATA], FallbackValue='Show pointer location with current touch data'}"
								Click="CheckBox_Click" />
							<TextBlock
								x:Name="mEnableDevSettingsWarning"
								Margin="35,0,0,10"
								FontSize="14"
								TextWrapping="WrapWithOverflow"
								Width="450"
								HorizontalAlignment="Left"
								Foreground="{Binding Path=ColorModel.[OrangeMouseOutBorderBackground]}"
								Text="{Binding Path=LocaleModel.[STRING_ENABLE_ANDROID_DEBUG_WARNING], FallbackValue='Enabling this setting may have an adverse impact on gameplay. You may consider turning it off later.'}" />
						</StackPanel>
					</Grid>
					<Grid
						x:Name="mQuitOptionsGrid"
						Row="3">
						<Grid.RowDefinitions>
							<RowDefinition
								Height="Auto" />
							<RowDefinition
								Height="Auto" />
							<RowDefinition
								Height="Auto" />
						</Grid.RowDefinitions>
						<Label
							Grid.Row="0"
							HorizontalAlignment="Left"
							Margin="0,0,0,15">
							<TextBlock
								FontSize="16"
								Padding="0"
								Text="{Binding Path=LocaleModel.[STRING_EXIT_OPTIONS], FallbackValue='Exit options'}"
								Foreground="{Binding Path=ColorModel.[SettingsWindowTabMenuItemLegendForeground]}" />
						</Label>
						<Common:CustomComboBox
							x:Name="mQuitOptionsComboBox"
							MaxDropDownHeight="150"
							Grid.Row="1"
							Width="390"
							FontSize="15"
							Margin="5,0,0,0"
							HorizontalAlignment="Left"
							SelectionChanged="MQuitOptionsComboBox_SelectionChanged" />
						<Common:CustomCheckbox
							x:Name="mShowOnExitCheckbox"
							Grid.Row="2"
							HorizontalAlignment="Left"
							Margin="5,10,0,0"
							Height="30"
							FontSize="12"
							Content="{Binding Path=LocaleModel.[STRING_ASK_ON_CLOSING], FallbackValue='Ask on closing'}"
							Click="MShowOnExitCheckbox_Click" />
					</Grid>
					<Grid
						x:Name="mScreenshotGrid"
						Row="4">
						<Grid.RowDefinitions>
							<RowDefinition
								Height="Auto" />
							<RowDefinition
								Height="Auto" />
						</Grid.RowDefinitions>
						<Label
							Grid.Row="0"
							HorizontalAlignment="Left"
							Margin="0,0,0,15">
							<TextBlock
								FontSize="16"
								Padding="0"
								Text="{Binding Path=LocaleModel.[STRING_MEDIA_FOLDER], FallbackValue='Media Folder'}"
								Foreground="{Binding Path=ColorModel.[SettingsWindowTabMenuItemLegendForeground]}" />
						</Label>
						<Grid
							Row="1"
							HorizontalAlignment="Left">
							<Grid.ColumnDefinitions>
								<ColumnDefinition
									Width="305" />
								<ColumnDefinition
									Width="*" />
							</Grid.ColumnDefinitions>
							<Label
								Grid.Column="0"
								HorizontalAlignment="Left">
								<TextBlock
									x:Name="mScreenShotPathLable"
									TextWrapping="WrapWithOverflow"
									MaxWidth="300"
									FontSize="16"
									Padding="0"
									Text="{Binding Path=LocaleModel.[STRING_MEDIA_FOLDER], FallbackValue='Media Folder'}"
									Foreground="{Binding Path=ColorModel.[SettingsWindowTabMenuItemForeground]}" />
							</Label>
							<Common:CustomButton
								x:Name="mChangePathBtn"
								MinWidth="150"
								Grid.Column="1"
								Margin="10,0,0,0"
								HorizontalAlignment="Left"
								ButtonColor="Background"
								Content="{Binding Path=LocaleModel.[STRING_CHANGE_PATH], FallbackValue='Change Path'}"
								Click="mChangePathBtn_Click" />
						</Grid>
					</Grid>
				</Grid>
			</Grid>
		</ScrollViewer>
		<Grid
			x:Name="mChangeLocaleGrid"
			Visibility="Collapsed"
			Row="1">
			<Grid.RowDefinitions>
				<RowDefinition
					Height="10" />
				<RowDefinition
					Height="Auto" />
				<RowDefinition
					Height="25" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="30" />
				<ColumnDefinition
					Width="*" />
				<ColumnDefinition
					Width="20" />
			</Grid.ColumnDefinitions>
			<Grid
				Row="1"
				Column="1"
				Margin="4,0,0,0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition
						Width="Auto" />
					<ColumnDefinition
						Width="6*" />
				</Grid.ColumnDefinitions>
				<Common:CustomPictureBox
					x:Name="mInfoIconLocale"
					ImageName="info_icon.png"
					MaxHeight="18"
					VerticalAlignment="Center"
					HorizontalAlignment="Right" />
				<Label
					HorizontalAlignment="Left"
					Grid.Column="1"
					VerticalAlignment="Center">
					<TextBlock
						TextWrapping="WrapWithOverflow"
						FontSize="14"
						Text="{Binding Path=LocaleModel.[STRING_LANGUAGE_CHANGE_APPLY_RESTART], FallbackValue='Language will be changed on next launch'}"
						Foreground="{Binding Path=ColorModel.[SettingsWindowForegroundDimDimDimColor]}" />
				</Label>
			</Grid>
		</Grid>
		<Grid
			x:Name="mChangePrefGrid"
			Row="1"
			Margin="4,0,0,0">
			<Grid.RowDefinitions>
				<RowDefinition
					Height="10" />
				<RowDefinition
					Height="Auto" />
				<RowDefinition
					Height="25" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="30" />
				<ColumnDefinition
					Width="*" />
				<ColumnDefinition
					Width="20" />
			</Grid.ColumnDefinitions>
			<Grid
				Row="1"
				Column="1">
				<Grid.ColumnDefinitions>
					<ColumnDefinition
						Width="Auto" />
					<ColumnDefinition
						Width="6*" />
				</Grid.ColumnDefinitions>
				<Common:CustomPictureBox
					x:Name="mInfoIcon"
					ImageName="info_icon.png"
					MaxHeight="18"
					VerticalAlignment="Center"
					HorizontalAlignment="Right" />
				<Label
					HorizontalAlignment="Left"
					Grid.Column="1"
					VerticalAlignment="Center">
					<TextBlock
						TextWrapping="WrapWithOverflow"
						FontSize="14"
						Text="{Binding Path=LocaleModel.[STRING_CHANGES_APPLY_AUTOMATIC], FallbackValue='Changes will apply automatically'}"
						Foreground="{Binding Path=ColorModel.[SettingsWindowForegroundDimDimDimColor]}" />
				</Label>
			</Grid>
		</Grid>
	</Grid>
</controls:UserControl>
