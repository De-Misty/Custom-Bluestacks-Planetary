<controls:UserControl
	x:Class="BlueStacks.BlueStacksUI.DMMScreenshotSettingControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:BlueStacks.BlueStacksUI"
	xmlns:Common="clr-namespace:BlueStacks.Common;assembly=HD-Common"
	xmlns:controls="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
	DataContext="{Binding Source='{x:Static Common:BlueStacksUIBinding.Instance}'}">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="8*" />
			<RowDefinition
				Height="8*" />
			<RowDefinition
				Height="5*" />
			<RowDefinition
				Height="8*" />
			<RowDefinition
				Height="71*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="5*" />
			<ColumnDefinition
				Width="90*" />
			<ColumnDefinition
				Width="5*" />
		</Grid.ColumnDefinitions>
		<TextBlock
			Grid.Row="1"
			Grid.Column="1"
			Margin="4,0,4,0"
			HorizontalAlignment="Left"
			FontWeight="Normal"
			FontSize="20"
			Text="{Binding Path=LocaleModel.[STRING_CHOOSE_SCREENSHOT_FOLDER_TEXT], FallbackValue='Select a folder to save screenshot'}"
			Foreground="{Binding Path=ColorModel.[SettingsWindowTabMenuItemForeground]}" />
		<Grid
			Row="3"
			Column="1">
			<Border
				BorderThickness="1"
				BorderBrush="#FF000000">
				<Grid
					Background="#FFFFFFFF">
					<Grid.ColumnDefinitions>
						<ColumnDefinition
							Width="79*" />
						<ColumnDefinition
							Width="0.2*" />
						<ColumnDefinition
							Width="20.8*" />
					</Grid.ColumnDefinitions>
					<TextBox
						x:Name="mChooseFolderTextBlock"
						Grid.Column="0"
						Background="#00FFFFFF"
						IsEnabled="True"
						Margin="5,0,0,0"
						BorderThickness="0"
						IsReadOnly="True"
						HorizontalAlignment="Left"
						VerticalAlignment="Center"
						FontSize="14"
						TextWrapping="NoWrap"
						TextAlignment="Center" />
					<Grid
						Column="1"
						Background="#FF808080" />
					<Grid
						Column="2"
						PreviewMouseLeftButtonUp="ChooseScreenshotFolder_MouseLeftButtonUp">
						<TextBlock
							FontSize="16"
							FontWeight="Normal"
							HorizontalAlignment="Center"
							VerticalAlignment="Center"
							Text="{Binding Path=LocaleModel.[STRING_CHOOSE], FallbackValue=Choose}"
							Foreground="{Binding Path=ColorModel.[BackgroundBlueBorderMouseDownBorderBackground]}" />
					</Grid>
				</Grid>
			</Border>
		</Grid>
	</Grid>
</controls:UserControl>
